{
  "version": 2,
  "builds": [
    {
      "src": "website/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/beta",
      "destination": "/beta-promo-system.html"
    },
    {
      "source": "/beta/(.*)",
      "destination": "/beta-promo-system.html"
    },
    {
      "source": "/app",
      "destination": "https://restaurant-app-xi-ashy.vercel.app"
    },
    {
      "source": "/app/(.*)",
      "destination": "https://restaurant-app-xi-ashy.vercel.app/$1"
    },
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}