{
  "version": 2,
  "builds": [
    {
      "src": "website/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/beta",
      "dest": "/website/beta-promo-system.html"
    },
    {
      "src": "/beta/(.*)",
      "dest": "/website/beta-promo-system.html"
    },
    {
      "src": "/app",
      "status": 302,
      "headers": {
        "Location": "https://restaurant-app-xi-ashy.vercel.app"
      }
    },
    {
      "src": "/app/(.*)",
      "status": 302,
      "headers": {
        "Location": "https://restaurant-app-xi-ashy.vercel.app/$1"
      }
    },
    {
      "src": "/",
      "dest": "/website/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/website/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}