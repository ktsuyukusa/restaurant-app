{
  "version": 2,
  "rewrites": [
    {
      "source": "/beta",
      "destination": "/website/beta-promo-system.html"
    },
    {
      "source": "/beta/(.*)",
      "destination": "/website/beta-promo-system.html"
    },
    {
      "source": "/",
      "destination": "/website/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/website/$1"
    }
  ],
  "redirects": [
    {
      "source": "/app",
      "destination": "https://restaurant-app-xi-ashy.vercel.app",
      "permanent": false
    },
    {
      "source": "/app/(.*)",
      "destination": "https://restaurant-app-xi-ashy.vercel.app/$1",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}